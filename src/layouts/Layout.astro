    }
    font-weight: 300;
    color: var(--primary-font);
    background-color: var(--background-color);
    margin: 0;
    width: auto;
    height: auto;
  }

  main {
    display: grid;
    grid-template-areas:
      "head  head"
      "menu  content"
      "footer footer";
    grid-template-columns: auto 1fr; /* Una columna que abarque toda la pantalla */
    grid-template-rows: auto 1fr auto;
    gap: 0.5em;
    padding: 0.5em;
    height: 100vh;
  }

  main > nav {
    grid-area: head;
  }
  main > menu {
    grid-area: menu;
  }
  main > section {
    grid-area: content;
  }
  main > footer {
    grid-area: footer;
  }
  .icon svg {
    fill: var(--primary-font); /*Cambia el color del svg*/
  }
</style>
